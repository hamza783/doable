<%= form_with model: project do |f| %>
  <div class="max-w-4xl mx-auto border border-gray-200 rounded-lg p-6 bg-white">
    <% if project.errors.any? %>
      <div class="mb-6 rounded-md border border-red-200 bg-red-50 px-4 py-3 text-red-700">
        <h2 class="font-semibold">
          <%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:
        </h2>
        <ul class="mt-2 list-disc list-inside">
          <% project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="grid grid-cols-12 gap-4 items-center">
      <%= f.label :name, class: "col-span-12 sm:col-span-3 text-sm font-medium text-gray-700" %>
      <div class="col-span-12 sm:col-span-9">
        <%= f.text_field :name,
          class: "block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-gray-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500/30 focus:border-indigo-500" %>
      </div>
    </div>
    <div class="mt-6">
      <%= f.submit class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>
  </div>
<% end %>