<%= form_with(model: todo) do |form| %>
    <% if todo.errors.any? %>
      <div class="mb-6 rounded-md border border-red-200 bg-red-50 px-4 py-3 text-red-700">
        <h2 class="font-semibold">
          <%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:
        </h2>
        <ul class="mt-2 list-disc list-inside">
          <% todo.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="grid grid-cols-12 gap-4 items-center">
      <%= form.label :name, class: "col-span-12 sm:col-span-3 text-sm font-medium text-gray-700" %>
      <div class="col-span-12 sm:col-span-9">
        <%= form.text_field :name,
          class: "block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-gray-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500/30 focus:border-indigo-500" %>
      </div>
      <%= form.label :description, class: "col-span-12 sm:col-span-3 text-sm font-medium text-gray-700" %>
      <div class="col-span-12 sm:col-span-9">
        <%= form.textarea :description,
          rows: 4,
          class: "block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-gray-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500/30 focus:border-indigo-500" %>
      </div>
      <%= form.label :completed, class: "col-span-12 sm:col-span-3 text-sm font-medium text-gray-700" %>
      <div class="col-span-12 sm:col-span-9">
        <%= form.check_box :completed,
          class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
      </div>
      <%= form.label :priority, class: "col-span-12 sm:col-span-3 text-sm font-medium text-gray-700" %>
      <div class="col-span-12 sm:col-span-9">
        <%= form.number_field :priority,
        min:1,
        max:5,
          class: "block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-gray-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500/30 focus:border-indigo-500" %>
      </div>
      <%= form.label :project_id, class: "col-span-12 sm:col-span-3 text-sm font-medium text-gray-700" %>
      <div class="col-span-12 sm:col-span-9">
        <%= form.collection_select :project_id,
          Current.user.projects,
          :id,
          :name,
          { prompt: "Select a project" },
          { class: "block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-gray-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500/30 focus:border-indigo-500" } %>
      </div>
    </div>
    <div class="mt-6">
      <%= form.submit class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>
<% end %>